   select s.id,s.clazz_id,s.name,s.sex,s.age,c.math,c.english,c.pe from stu s,score c where c.stu_id=s.id
 </select> -->
 
 <select id="findAllClazz"  resultMap="clazzMap">
   select * from clazz
 </select>

</mapper>